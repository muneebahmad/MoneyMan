<?xml version="1.0" encoding="utf-8"?>
<!-- @author:MuneebAhmad -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbg"
    android:orientation="vertical"
    android:id="@+id/budget_touch" >
    

     
  <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

      <ImageButton
          android:id="@+id/appHome"
          android:layout_width="60sp"
          android:layout_height="60sp"
          android:background="@drawable/keypad1"
          android:src="@drawable/home" />
      
      
                    <ImageButton
                        android:id="@+id/list"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/keypad1"
                        android:src="@drawable/list" />
                    
                    <ImageButton
                        android:id="@+id/budget"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/keypad3"
                        android:src="@drawable/budget" />
                    
                     <ImageButton
                        android:id="@+id/graph"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/keypad1"
                        android:src="@drawable/graph" />
                     
                     <ImageButton
                        android:id="@+id/balance"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/keypad1"
                        android:src="@drawable/balance" />
                     
                     
      
      </LinearLayout>
      	<TextView
                android:id="@+id/homeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Budget"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
  
                <HorizontalScrollView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                
                               
     <LinearLayout
                android:id="@+id/lay_id"
                android:layout_height="250sp" 
                android:layout_width="wrap_content"
                android:orientation="vertical"
                >
                
              <TextView
        android:id="@+id/budget_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
              <ImageView
                    android:id="@+id/iView3"
                    android:layout_height="20sp" 
                    android:layout_width="wrap_content"
                    android:src="@drawable/budgetbar"
                    android:contentDescription="income"
                    />
                
                 <TextView
        android:id="@+id/budget_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
         
                 
                <ImageView
                    android:id="@+id/iView1"
                    android:layout_height="20sp" 
                    android:layout_width="wrap_content"
                    android:src="@drawable/incomebar"
                    android:contentDescription="income"
                    />
                
                
                  <TextView
        android:id="@+id/budget_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
                
                <ImageView
                    android:id="@+id/iView2"
                    android:layout_height="20sp" 
                    android:layout_width="wrap_content"
                    android:background="@drawable/exp_bck"
                    android:contentDescription="expense"
                    />
                
                            <TextView
        android:id="@+id/budget_view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
                     
                     <ImageView
                    android:id="@+id/iView5"
                    android:layout_height="20sp" 
                    android:layout_width="wrap_content"
                    android:background="@drawable/moneybar"
                    />
            
                     <TextView
        android:id="@+id/budget_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
                     
                     <ImageView
                    android:id="@+id/iView4"
                    android:layout_height="20sp" 
                    android:layout_width="wrap_content"
                    android:background="@drawable/savingbar"
                    />
        
             </LinearLayout>
             </HorizontalScrollView>

              <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_gravity="center_horizontal"
          >
          
          <Button
              	android:id="@+id/create_budget"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:background="@drawable/keypad1"  
				android:text="Create Budget"
				android:textColor="@android:color/white"
				android:textStyle="bold"           
              />

          </LinearLayout>

      <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle" >

        <ImageButton
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@drawable/menu_back"
            android:textColor="@android:color/white"
            android:src="@drawable/bottom_menu"
            android:text="Pull Menu" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:focusable="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal" >
                    
                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/forward"
                        android:src="@drawable/bkw" />

                    <ImageButton
                        android:id="@+id/home"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/min"
                        android:src="@drawable/down" />

                    <ImageButton
                        android:id="@+id/menu"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/men" />

                    <ImageButton
                        android:id="@+id/right"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/forward"
                        android:src="@drawable/frw" />

          

                    <ImageButton
                        android:id="@+id/help"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/help" />

                    <ImageButton
                        android:id="@+id/credits"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/credits" />

                    <ImageButton
                        android:id="@+id/settings"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/settings" />

                    <ImageButton
                        android:id="@+id/notes"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/notes" />

                    <ImageButton
                        android:id="@+id/balancesheet"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/balancesheet" />
                    
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </SlidingDrawer>
</LinearLayout>