<?xml version="1.0" encoding="utf-8"?>
<!-- @author:MuneebAhmad -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_layout"
    android:orientation="vertical" >
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/stackview1"
        >
        <Button
              	android:id="@+id/close_cl"
				android:layout_width="40sp" 
				android:layout_height="40sp"
				android:background="@drawable/cl"  
				android:text="X"
				android:textColor="@android:color/white"
				android:textStyle="bold"         
              />
        
        </LinearLayout>
        
     <LinearLayout
    	    android:layout_height="wrap_content"
    	    android:layout_width="match_parent"
    	    android:background="#444444"
    	    >
        
        <TextView
            android:id="@+id/edit_title"
            android:layout_height="wrap_content" 
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:paddingBottom="5sp"
            android:background="@drawable/stackview2"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="Exit Prompt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </LinearLayout>
        
     	<TextView
    	    android:layout_width="match_parent" 
    	    android:layout_height="8sp"
    	    android:background="@drawable/stackview3"
    	    android:text=""
    	    />
     	<LinearLayout
     	    android:layout_height="wrap_content"
     	    android:layout_width="wrap_content"
     	    android:orientation="vertical"
     	    android:background="@drawable/cl"
     	    >
     	<TextView
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:textColor="@android:color/white"
     	    android:textStyle="bold"
     	    android:textSize="30sp"
     	    android:text="Are you sure! you want to exit?"
     	    />
     	
     	<LinearLayout
     	    android:layout_width="match_parent"
     	    android:layout_height="wrap_content"
     	    android:orientation="horizontal"
     	    android:weightSum="2"
     	    >
     	    <Button
     	        android:id="@+id/close_yes"
     	        android:layout_width="wrap_content"
     	        android:layout_height="wrap_content"
     	        android:background="@drawable/yes"
     	        android:textColor="@android:color/white"
     	        android:textStyle="bold"
     	        android:text="Yes"
     	        android:layout_weight="1"
     	        />
     	    <Button
     	         android:id="@+id/close_no"
     	        android:layout_width="wrap_content"
     	        android:layout_height="wrap_content"
     	        android:background="@drawable/delete"
     	        android:textColor="@android:color/white"
     	        android:textStyle="bold"
     	        android:text="No"
     	        android:layout_weight="1"
     	        />
     	</LinearLayout>
     	</LinearLayout>
        </LinearLayout>
        
	