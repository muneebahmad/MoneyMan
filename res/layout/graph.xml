<?xml version="1.0" encoding="utf-8"?>
<!-- @author:MuneebAhmad -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/graph_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/appHome"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/keypad1"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/list"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/keypad1"
            android:src="@drawable/list" />

        <ImageButton
            android:id="@+id/budget"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/keypad1"
            android:src="@drawable/budget" />

        <ImageButton
            android:id="@+id/graph"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/keypad3"
            android:src="@drawable/graph" />

        <ImageButton
            android:id="@+id/balance"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/keypad1"
            android:src="@drawable/balance" />
    </LinearLayout>

    <TextView
        android:id="@+id/homeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Graph"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_gravity="top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                 >
                
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                 >
                
                 <TextView
                     android:id="@+id/texttop"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text=""
                     android:gravity="top"
                 />
                 
                 <TextView
                     android:id="@+id/textmed"
                     android:layout_height="match_parent"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:text=""
                     android:gravity="center_vertical"
                 />
            
                 </LinearLayout>
                 
                <ImageView
                    android:id="@+id/graphY"
                    android:layout_width="6sp"
                    android:layout_height="wrap_content"
                    android:contentDescription="income"
                    android:src="@drawable/graphbounds"
                     />

                <ImageView
                    android:id="@+id/graphtotal"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="income"
                    android:src="@drawable/graphtotal" />
                
                <ImageView
                    android:id="@+id/graphbudget"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="income"
                    android:src="@drawable/graphbudget" />

                <ImageView
                    android:id="@+id/graphimg"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="income"
                    android:src="@drawable/incomegraph" />

                <ImageView
                    android:id="@+id/grapexp"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="income"
                    android:src="@drawable/expensegraph" />
            </LinearLayout>
            <ImageView
                    android:id="@+id/graphX"
                    android:layout_width="match_parent"
                    android:layout_height="6sp"
                    android:contentDescription="income"
                    android:src="@drawable/graphbounds"
                    android:layout_marginLeft="40sp"
                     />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
                   <TextView
                     android:id="@+id/textcash"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="#FFFF00"
                     android:text="[cash]"
                     android:layout_marginLeft="70sp"
                 />
                   
                   <TextView
                     android:id="@+id/textbud"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="#00FF00"
                     android:text="[Budget]"
                     android:layout_marginLeft="20sp"
                 />
                   
                      <TextView
                     android:id="@+id/textincome"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="#1E90FF"
                     android:text="[Income]"
                     android:layout_marginLeft="15sp"
                 />
                      
                           <TextView
                     android:id="@+id/textexpense"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:textStyle="bold"
                     android:textColor="#FFD700"
                     android:text="[Expense]"
                     android:layout_marginLeft="15sp"
                 />
                
                </LinearLayout>>
            
        </LinearLayout>
    </ScrollView>

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:handle="@+id/handle" >

        <ImageButton
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@drawable/menu_back"
            android:src="@drawable/bottom_menu"
            android:text="Pull Menu"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:focusable="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/forward"
                        android:src="@drawable/bkw" />

                    <ImageButton
                        android:id="@+id/home"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/min"
                        android:src="@drawable/down" />

                    <ImageButton
                        android:id="@+id/menu"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/men" />

                    <ImageButton
                        android:id="@+id/right"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/forward"
                        android:src="@drawable/frw" />

                    <ImageButton
                        android:id="@+id/help"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/help" />

                    <ImageButton
                        android:id="@+id/credits"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/credits" />

                    <ImageButton
                        android:id="@+id/settings"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/settings" />

                    <ImageButton
                        android:id="@+id/notes"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/notes" />

                    <ImageButton
                        android:id="@+id/balancesheet"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:background="@drawable/nav"
                        android:src="@drawable/balancesheet" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </SlidingDrawer>

</LinearLayout>