<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_layout" >
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/stackview1"
        >
    
    <Button
        android:id="@+id/settings_cl"
        android:layout_height="40sp"
        android:layout_width="40sp"
        android:background="@drawable/cl"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="X"
        />
    </LinearLayout>
          
    	<TextView
            android:id="@+id/settings_title"
            android:layout_height="wrap_content" 
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:paddingBottom="5sp"
            android:background="@drawable/stackview2"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="Settings"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
         
     <TextView
    	    android:layout_width="match_parent" 
    	    android:layout_height="8sp"
    	    android:background="@drawable/stackview3"
    	    android:text=""
    	    />
    
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/allbg" >
            
            
         <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="center_horizontal"
             >
               <ImageView
                   android:layout_height="50sp"
                   android:layout_width="50sp"
                   android:id="@+id/sett_image1"
                   android:src="@drawable/sett2"
                   android:contentDescription="sett_image"
                   android:gravity="center_horizontal"
                   
               />
               <ImageView
                   android:layout_height="30sp"
                   android:layout_width="30sp"
                   android:id="@+id/sett_image2"
                   android:src="@drawable/sett3"
                   android:contentDescription="sett_image2"
                   android:gravity="center_horizontal"
                   
               />
               
               </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="30sp"
                android:paddingTop="20sp" >
            
            
            <Button
            android:id="@+id/settings_password"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Passwords"
            android:background="@drawable/parent_bg"
            />
            
            <Button
            android:id="@+id/settings_volume"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Sound Volume"
            android:background="@drawable/parent_bg"
            />
            
            </LinearLayout>
            
            </LinearLayout>
            </ScrollView>
</LinearLayout>