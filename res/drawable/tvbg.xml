<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#EEE8AA"
                android:centerColor="#EEE8AA"
                android:endColor="#EEE8AA"
                android:angle="270" />
            <stroke
                
                 />
            <corners
               android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                
                 />
                
            <stroke
                android:width="4dp"
                android:color="#888888"
                 />
            <corners
                 android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                 />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                 android:startColor="#333333"
                android:centerColor="#222222"
                android:endColor="#333333"
                android:angle="270" /> />
            <stroke
              
                 />
            <corners
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                 />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>