<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#1E90FF"
                android:centerColor="#1E90FF"
                android:endColor="#1E90FF"
                android:angle="270" />
            <stroke
                
                 />
            <corners
               android:topRightRadius="20dp"
                android:topLeftRadius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                 />
                
            <stroke
               />
            <corners
                 android:topRightRadius="20dp"
                android:topLeftRadius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#1E90FF"
                
                android:angle="270" />
            <stroke
                 
                 />
            <corners
                 android:topRightRadius="20dp"
                android:topLeftRadius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>