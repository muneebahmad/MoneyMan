<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#000000"
                android:centerColor="#000000"
                android:endColor="#000000"
                android:angle="270"
                 />
            <stroke
                 android:width="12sp"
                 />
            <corners
                android:radius="5dp"
                
       		/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                android:startColor="#000000"
                android:endColor="#ff8c00"
                android:angle="270" />
                
            <stroke
                android:width="2dp"
                android:color="#dcdcdc" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#ADD8E6"
                android:endColor="#FF0000"
                android:angle="270" />
            <stroke
               
               android:width="5sp"
                 />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>