<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <bitmap
            android:src="@drawable/calc2"
            
            
            />
          
        <shape>
           
            <gradient
                android:startColor="#777777"
                android:centerColor="#999999"
                android:endColor="#222222"
                android:angle="270"
                android:type="radial"
                android:gradientRadius="70"
                android:useLevel="true"
                 />
           <stroke
                 />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                android:startColor="#000000"
                android:endColor="#000000"
                android:angle="270" />
                
            <stroke
                android:width="2dp"
                android:color="#777777" />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>    
        <bitmap
            android:src="@drawable/calc1"
            
            />    
        <shape>
            <gradient
                 />
           <stroke
                 />
            <corners
               
                />
            <padding
               />
        </shape>
    </item>
</selector>