<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#000033"
                android:endColor="#000033"
                android:angle="270" />
           <stroke
                android:width="6dp"
                 />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
             <gradient
                android:startColor="#000000"
                android:endColor="#000000"
                android:angle="270" />
                
            <stroke
                android:width="2dp"
                android:color="#777777" />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="#FF0000"
                android:endColor="#330000"
                android:angle="270" />
           <stroke />
            <corners
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>